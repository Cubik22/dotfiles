evaluate-commands %sh{
    config_files="
    	filetype/octave.kak
    	tiny.kak
    	auto-pairs.kak
    	indentation.kak
    	wayland.kak
    	git-commit-overflow.kak
    	state-save.kak
    	settings.kak
    	key-bindings.kak
    	functionality.kak
    	modeline.kak
    	languages.kak
    	doas-write.kak
	"

    for file in $config_files; do
         printf "%s" "
             try %{
                 source %{${kak_config:?}/$file}
             } catch %{
                 echo -debug %val{error}
             }
         "
    done
}
