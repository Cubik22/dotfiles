evaluate-commands %sh{
    config_files="
		indentation.kak
		wayland.kak
		git-commit-overflow.kak
		state-save.kak
		settings.kak
		modeline.kak
		language-server.kak
		doas-write.kak
	"

    for file in $config_files; do
         printf "%s" "
             try %{
                 source %{${kak_config:?}/$file}
             } catch %{
                 echo -debug %val{error}
             }
         "
    done
}
