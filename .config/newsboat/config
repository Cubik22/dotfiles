### newsboat

# automatically reload all feeds on startup
# auto-reload yes

# number of minutes between reloads when auto-reload yes
# reload-time 120

# number of parallel reload threads
reload-threads 8

# number of tries of downloading a feed
# download-retries 4

# maximum number of articles to open in a browser
max-browser-tabs 16

# when an item is opened in the browser and marked as read jump to the next unread item
openbrowser-and-mark-jumps-to-next-unread yes

# for all feed items with no content but with a link
# the link is downloaded and the result used as content instead
download-full-page yes

# operations executed on startup separated by semicolons
run-on-startup next-unread

# do not show lower bar
show-keymap-hint no

# defines the maximum number of entries of commandline/search history to be saved
history-limit 65536

# number of lines above and below the selected item
scrolloff 8

# if set to a number greater than 0, all HTML will be rendered
# to this maximum line length or the terminal width
# text-width 80

# default browser
browser lynx
# browser w3m

# set pager
# pager kak-man

# url viewer
# external-url-viewer "urlview"

## macro

# browser
macro y set browser "echo %u | wl-copy-env --trim-newline" ; open-in-browser ; set browser lynx
macro f set browser "firefox --private-window %u" ; open-in-browser ; set browser lynx
macro ^F set browser "firefox --new-window %u" ; open-in-browser ; set browser lynx
macro F set browser firefox ; open-in-browser ; set browser lynx
macro w set browser w3m ; open-in-browser ; set browser lynx
macro v set browser "riverctl spawn \"mpv --force-window %u\"" ; open-in-browser ; set browser lynx
macro a set browser "riverctl spawn \"mpv --force-window --video=no %u\"" ; open-in-browser ; set browser lynx

# wrap
macro j set text-width 80
macro k set text-width 0

## key-bindings

bind-key SPACE macro-prefix

bind-key j down
bind-key k up
bind-key l open
bind-key h quit
bind-key BACKSPACE quit
bind-key H next
bind-key L prev
bind-key G end
bind-key g home

bind-key J next-feed
bind-key K prev-feed

bind-key ^D pagedown
bind-key ^U pageup
bind-key ^G goto-title
bind-key u show-urls

bind-key t select-tag
bind-key T set-tag

bind-key ^J next-dialog
bind-key ^K prev-dialog

bind-key ^N next-unread-feed
bind-key ^P prev-unread-feed
bind-key , random-unread

bind-key o open-in-browser
bind-key O open-in-browser-and-mark-read
bind-key ^O open-in-browser-noninteractively

bind-key i open-all-unread-in-browser
bind-key I open-all-unread-in-browser-and-mark-read

bind-key a mark-feed-read
bind-key A mark-all-feeds-read
bind-key ^A mark-all-above-as-read

bind-key c toggle-article-read
bind-key C toggle-show-read-feeds
bind-key ^C toggle-source-view

bind-key s save
bind-key S save-all

bind-key z sort
bind-key Z rev-sort

bind-key d delete-article
bind-key D delete-all-articles

bind-key x pb-download
bind-key X pb-delete

## colors

# colorful
color listnormal        cyan default
color listnormal_unread blue default bold
color listfocus         yellow default
color listfocus_unread  magenta default bold
color info              red default
color article           default default
color background        default default

## highlights

highlight all "---.*---" yellow
highlight feedlist ".*(0/0))" black
highlight article "(^Feed:.*|^Title:.*|^Author:.*)" cyan default bold
highlight article "(^Link:.*|^Date:.*)" default default
highlight article "https?://[^ ]+" green default
highlight article "^(Title):.*$" blue default
highlight article "\\[[0-9][0-9]*\\]" magenta default bold
highlight article "\\[image\\ [0-9]+\\]" green default bold
highlight article "\\[embedded flash: [0-9][0-9]*\\]" green default bold
highlight article ":.*\\(link\\)$" cyan default
highlight article ":.*\\(image\\)$" blue default
highlight article ":.*\\(embedded flash\\)$" magenta default
