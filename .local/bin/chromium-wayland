#!/bin/sh

# make sure 'chromium didn't shut down correctly' does not happen
sed -i 's/"exited_cleanly":false/"exited_cleanly":true/' "$XDG_CONFIG_HOME/chromium/Default/Preferences"
sed -i 's/"exit_type":"Crashed"/"exit_type":"Normal"/' "$XDG_CONFIG_HOME/chromium/Default/Preferences"

# launch chromium with wayland flags and black ui
    # --enable-experimental-cookie-features \
chromium \
    --enable-features=UseOzonePlatform,WebUIDarkMode \
    --enable-experimental-web-platform-features \
    --enable-experimental-webassembly-features \
    --ozone-platform=wayland \
    --force-dark-mode \
    "$@"
