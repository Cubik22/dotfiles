#!/bin/sh

info=$(cat << EOF
mv-space-lower target
change spaces with dashes and turn to lower case
EOF
)

if [ "$#" -ne 0 ]; then
    case "$1" in
        -h|--help)
            echo "$info"
            return 0
        ;;
    esac
fi

target="$1"

rename="$(echo "$target" | tr ' ' '-' | tr '[:upper:]' '[:lower:]')"

mv "$target" "$rename"
