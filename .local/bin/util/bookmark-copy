#!/usr/bin/env bash

# copy a bookmark

bookmarks_dir="${XDG_LOCAL_HOME:=$HOME/.local}/etc/bookmarks"
cd "$bookmarks_dir" || return 1

if [ "$#" -eq 0 ]; then
    initial_query="${*:-}"
else
    case "$1" in
        --from-clipboard)
            # remove / from end of url
            initial_query="$("$PASTE_CMD" -n | sed 's/\/$//')"
        ;;
        *)
            echo "error: argument not recognized"
            return 1
        ;;
    esac
fi

IFS=: read -ra selected < <(
    rg --color=always --line-number --no-heading --smart-case "" |
    fzf \
        --ansi \
        --query "$initial_query" \
        --color "hl:-1:underline,hl+:-1:underline:reverse" \
        --delimiter :
)
[ -n "${selected[0]}" ] && sed -n "${selected[1]}p" "${selected[0]}" | cut -d " " -f 1 | "$COPY_CMD"
