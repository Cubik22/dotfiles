#!/bin/sh

info=$(cat << EOF
mv-rename target [target ...]
rename files using text editor
EOF
)

if [ "$#" -ne 0 ]; then
    case "$1" in
        -h|--help)
            echo "$info"
            return 0
        ;;
    esac
else
    file="$(
        $FZF_DEFAULT_COMMAND \
        --type=file \
        --type=symlink \
        --exact-depth 1 |
        fzf \
        --prompt "${FZF_BEFORE_PROMPT}rename: "
    )"
    [ -z "$file" ] && return 0
    set -- "$file"
fi

rename_file="$(mktemp)"

for target in "$@"; do
    echo "$target" >> "$rename_file"
done

old_number="$(wc -l "$rename_file" | cut -d " " -f 1)"
"${EDITOR:-kak}" "$rename_file"
new_number="$(wc -l "$rename_file" | cut -d " " -f 1)"

if [ "$new_number" -ne "$old_number" ]; then
    echo "error: file has not the same number of lines as parameters passed"
    return 1
fi

number_target=1
while read -r line; do
    file=""
    eval "file=\"\$$number_target\""
    if [ ! "$line" = "$file" ]; then
        mv "$file" "$line"
    fi
    number_target="$(( number_target + 1 ))"
done < "$rename_file"

rm -f "$rename_file"
