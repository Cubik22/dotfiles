#!/bin/sh

# menu with fzf in order to interact with bookmarks

actions=$(cat << EOF
copy-normal
copy-search
make-dir
edit-normal
edit-paste
add-normal
add-copy
add-repo
add-wiki
EOF
)

result="$(echo "$actions" | fzf)"

case "$result" in
    copy-normal) bookmark-copy ;;
    copy-search) bookmark-copy --from-clipboard ;;
    make-dir) bookmark-create-directory ;;
    edit-normal) bookmark-edit ;;
    edit-paste) bookmark-edit --paste ;;
    add-normal) bookmark-add ;;
    add-copy) bookmark-add --copy ;;
    add-repo) bookmark-add --repo ;;
    add-wiki) bookmark-add --wiki ;;
esac
