#!/bin/sh

# menu with fzf in order to interact with bookmarks

actions=$(cat << EOF
copy-normal
copy-search
make-dir-child
make-dir-root
edit-normal
edit-paste
add-normal
add-copy
add-article
add-repo
EOF
)

result="$(echo "$actions" | fzf --prompt 'bookmark: ')"
[ -z "$result" ] && return 0

case "$result" in
    copy-normal) bookmark-copy ;;
    copy-search) bookmark-copy --from-clipboard ;;
    make-dir-child) bookmark-create-directory child;;
    make-dir-root) bookmark-create-directory root;;
    edit-normal) bookmark-edit ;;
    edit-paste) bookmark-edit --paste ;;
    add-normal) bookmark-add normal;;
    add-copy) bookmark-add copy ;;
    add-article) bookmark-add article ;;
    add-repo) bookmark-add repo ;;
esac
