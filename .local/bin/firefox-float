#!/bin/sh

# spawn firefox in a floating window
# used with newsboat

firefox "$@" > /dev/null 2>&1 &

# wait for the window
sleep 1

riverctl toggle-float

## resize window

# maximize window
riverctl resize vertical 10000
riverctl resize horizontal 10000

sleep 0.05

# resize and move below bar
riverctl resize vertical -20
riverctl resize horizontal -800
riverctl snap down

## with constant window size

# # resize window
# riverctl resize vertical 16
# riverctl resize horizontal 400

# sleep 0.05

# # move below bar
# riverctl snap up
# riverctl move down 20
